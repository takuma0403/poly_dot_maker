# ---- Build Stage ----
FROM golang:1.25-alpine AS builder

WORKDIR /app

COPY go.mod go.sum ./
RUN go mod download

COPY src/ ./src/
COPY static/ ./static/

RUN CGO_ENABLED=0 GOOS=linux go build -o server ./src/

# ---- Release Stage ----
FROM gcr.io/distroless/static-debian12

WORKDIR /app

COPY --from=builder /app/server .
COPY --from=builder /app/static/ ./static/

EXPOSE 8080

CMD ["/app/server"]
